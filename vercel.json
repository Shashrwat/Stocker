{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "vercel-python-slim@0.0.9"
    },
    {
      "src": "public/",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.py"
    },
    {
      "source": "/(.*)",
      "destination": "/public/$1"
    }
  ]
}